{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "app/dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/(bio|contact).html",
      "destination": "/$1.html"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
